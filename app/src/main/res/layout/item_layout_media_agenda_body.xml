<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr"
    android:layout_marginVertical="8dp"
    android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView
        android:layout_margin="2dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/festivalsImageView_newHubFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A5A5A5"
            android:scaleType="centerCrop" />

    </com.google.android.material.card.MaterialCardView>


    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textSize="14sp"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test"
            android:layout_gravity="start"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end" />


        <TextView
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:textStyle="bold"
            android:text="Test"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <LinearLayout
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/watchLinearLayout"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/watch_icon"/>

                <TextView
                    android:layout_marginStart="4dp"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ä°zle"
                    android:textColor="@color/black" />

            </LinearLayout>



            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/readMoreLinearLayout"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/read_more_icon"/>

                <TextView
                    android:layout_marginStart="4dp"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Devamini oku"
                    android:textColor="@color/black" />



            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>