<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layoutDirection="ltr"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/test_b"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingTop="30dp"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:background="@drawable/test_d"
            android:id="@+id/dateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="Tarih seç"
            android:textColor="@color/color3"
            android:textSize="15sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="10dp"
            android:background="@color/color6" />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:background="@drawable/test_d"
                android:id="@+id/allTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="Tümü"
                android:textColor="@color/color3"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/test_d"
                android:id="@+id/newsTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="Haber"
                android:textColor="@color/color3"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:background="@drawable/test_d"
                android:id="@+id/adsTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="Reklam"
                android:textColor="@color/color3"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="0.0dp"
            android:layout_marginVertical="10dp"
            android:background="@color/color6" />

        <TextView
            android:layout_marginTop="0dp"
            android:layout_gravity="center"
            android:id="@+id/okTextView"
            android:background="@drawable/test_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:text="Tamam"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />


<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="1dp"-->
<!--            android:layout_marginVertical="3dp"-->
<!--            android:background="@color/color6" />-->
<!--        -->
<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="1dp"-->
<!--            android:layout_marginVertical="3dp"-->
<!--            android:background="@color/color6" />-->




    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:paddingHorizontal="30dp"
        android:background="@drawable/test_c"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Filtre"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>