<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.MeActivity">





    <com.medyatakip.app.util.ZoomClass
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:contentDescription="Todo"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />


    <LinearLayout
        android:visibility="visible"
        android:background="#CC000000"
        android:id="@+id/ha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_marginVertical="10dp"
            android:id="@+id/paylas"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|start"
            android:padding="4dp"
            android:src="@drawable/share_icon"/>


        <TextView
            android:layout_weight="2"
            android:id="@+id/name"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Kaynak"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />


<!--        <ImageView-->
<!--            android:visibility="gone"-->
<!--            android:layout_marginVertical="10dp"-->
<!--            android:id="@+id/cancel"-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_gravity="center_vertical"-->
<!--            android:src="@drawable/baseline_cancel_24"/>-->


        <TextView
            android:layout_gravity="center_vertical|end"
            android:id="@+id/tumSayfa"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Sayfayı Gör"
            android:textColor="#226DAF"
            android:textSize="13sp"/>

        <ImageView
            android:visibility="gone"
            android:layout_marginVertical="10dp"
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|start"
            android:padding="4dp"
            android:src="@drawable/baseline_cancel_24"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#33FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/leftArrowImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:padding="15dp"
            android:src="@drawable/left_arrow"
            app:tint="@color/black"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1/20"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/rightArrowImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:padding="15dp"
            android:src="@drawable/right_arrow"
            app:tint="@color/black"
            tools:ignore="RtlSymmetry" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>